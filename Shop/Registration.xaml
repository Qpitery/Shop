<Window x:Class="Shop.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Registration" Height="350" Width="400">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>
        <StackPanel VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Логин:" Width="60" VerticalAlignment="Center"></Label>
                <TextBox x:Name="LoginBox" Width="100" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Пароль:" Width="60" VerticalAlignment="Center"></Label>
                <TextBox x:Name="PasswordBox" Width="100" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button Content="Войти" Click="Button_Click" Height="20" Width="80" ></Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
